<%- include('header') %>

    <div class="text-center center-div mt-5" id='login'>
        <div class="container w-50 border py-5">
            <div class="title pb-5 text-light">
                <h2 class="font-weight-bold">
                    Login System
                </h2>
                <span>Login for the existing user</span>
                <% if(locals.logout){ %>
                    <div class="alert alert-success text-center">
                        <%= logout %>
                    </div>
                    <% } %>
            </div>
            <form action="/route/login" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name='email' placeholder="email">
                    <small class="form-text text-light text-left">Register email address</small>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name='password' placeholder="password">

                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
    <%- include('footer') %>